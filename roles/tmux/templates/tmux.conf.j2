# My tmux config file
# Uses tpm for package management
# https://github.com/tmux-plugins/tpm

# Set prefix to ctrl-a
set-option -g prefix C-a

# Set TERM properly
# https://github.com/tmux/tmux/wiki/FAQ#what-is-term-and-what-does-it-do
set -g default-terminal "tmux-256color"

# Enable mouse mode
set -g mouse on

# Start window numbering at 1
set -g base-index 1
setw -g pane-base-index 1
setw -g automatic-rename on
set -g renumber-windows on

# Set to Control-T/W to open and close windows/tabs
bind-key -n C-T new-window
bind-key -n C-W kill-window

# Set custom TPM plugin path
set-environment -g TMUX_PLUGIN_MANAGER_PATH '{{ R_tmux_plugin_dir.path }}/'

# Plugins to install (should be at the bottom)
{% for plugin in tmux_plugins %}
set -g @plugin '{{ plugin }}'
{% endfor %}

# Initialize tpm (must be last line)
run -b '~/.tmux/plugins/tpm/tpm'
